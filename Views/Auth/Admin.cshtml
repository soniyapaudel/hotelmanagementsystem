@{

ViewData["Title"] = "AdminLogin";
}
<div class=" row justify-content-md-center">
<div class="col-6">
<div class="card">
<div class="card-body">
<h2>Admin Login</h2>
<hr />
<form method="post">
<div class="mb-3">
Email address:
<input type="email" class="form-control" id="exampleFormControlInput1"
